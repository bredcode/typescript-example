{
  "compilerOptions": {
    "target": "ES2020", // 최신 JS 문법
    "module": "CommonJS", // Jest는 CommonJS 기반
    "moduleResolution": "node",
    "esModuleInterop": true, // import 호환성
    "forceConsistentCasingInFileNames": true,
    "strict": true, // 엄격한 타입 검사
    "skipLibCheck": true,
    "outDir": "./dist", // 컴파일 결과 위치
    "types": ["jest", "node"] // Jest 타입 인식
  },
  "include": ["**/*.ts", "**/*.tsx"], // 포함할 파일
  "exclude": ["node_modules", "dist"] // 제외할 폴더
}
